    //æŠ½è±¡æ„ä»¶è§’è‰²
    public interface Text {
        String getContent();
    }

    //å…·ä½“æ„ä»¶è§’è‰²
    public class PlainText implements Text {
        private String content;

        public PlainText(String content){
            this.content = content;
        }

        @Override
        public String getContent(){
            return content;
        }
    }

    //æŠ½è±¡è£…é¥°è§’è‰²
    public abstract class TextDecorator implements Text {
        protected Text text;

        public TextDecorator (Text text){
            this.text = text;
        }
    }

    //å…·ä½“è£…é¥°è§’è‰²
    public class BoldText extends TextDecorator {
        public BoldText(Text text){
            super(text);
        }

        @Override
        public String getContent(){
            return "<b>" + text.getContent() + "</b>";
        }
    }

    public class DecoratorPattern {
        public static void main(String[] args) {
            Text text = new PlainText("Hello world!");
            text = new BoldText(text);
            System.out.println(text.getContent());
        }
    }
    
    ä¾‹å­ğŸŒ°ï¼š
    //æŠ½è±¡æ„å»ºè§’è‰²
    public abstract class Drink{
        public String des;
        private Double price = 0.0;

        public String getDes() {
            return des;
        }

        public void setDes(String des) {
            this.des = des;
        }

        public Double getPrice() {
            return price;
        }

        public void setPrice(Double price) {
            this.price = price;
        }

        public abstract Double cost();
    }

    //ç¼“å†²ç±»ï¼Œæå–å…±åŒç‚¹
    public class Coffee extends Drink {
        @Override
        public Double cost() {
            return super.getPrice();
        }
    }

    //å…·ä½“æ„å»ºè§’è‰²
    public class LongBlack extends Coffee{
        public LongBlack() {
            setDes("ç¾å¼å’–å•¡");
            setPrice(7.0);
        }
    }

    //å…·ä½“æ„å»ºè§’è‰²
    public class Espresso extends Coffee{
        public Espresso() {
            setDes("æ„å¤§åˆ©å’–å•¡");
            setPrice(6.0);
        }
    }

    //æŠ½è±¡è£…é¥°è€…
    public class CoffeeDecorator extends Drink {

        private Drink drink;
    
        public CoffeeDecorator(Drink drink) {
            this.drink = drink;
        }
    
        @Override
        public Double cost() {
            return super.getPrice() + drink.cost();
        }
    
        @Override
        public String getDes() {
            return des + " " + getPrice() + " " + drink.getDes();
        }
    }

    //å…·ä½“è£…é¥°è€…ï¼Œå·§å…‹åŠ›
    public class Chocolate extends CoffeeDecorator {
        public Chocolate(Drink drink) {
            super(drink);
            setDes("å·§å…‹åŠ›");
            setPrice(4.0);
        }
    }
    
    //å…·ä½“è£…é¥°è€…ï¼Œç‰›å¥¶
    public class Milk extends CoffeeDecorator{
        public Milk(Drink drink) {
            super(drink);
            setDes("ç‰›å¥¶");
            setPrice(3.0);
        }
    }

    public class CoffeeBar {
        public static void main(String[] args) {
            System.out.println("è®¢å•1");
            Drink order = new LongBlack();
            System.out.println("è´¹ç”¨ï¼š" + order.getPrice() + ", " + "æè¿°ï¼š" + order.getDes());
    
            order = new Milk(order);
            System.out.println("åŠ å…¥ä¸€ä»½ç‰›å¥¶è´¹ç”¨ï¼š" + order.cost() + ", " + "æè¿°ï¼š" + order.getDes());
    
            order = new Milk(order);
            System.out.println("åŠ å…¥ä¸¤ä»½ç‰›å¥¶è´¹ç”¨: " + order.cost() + ", " + "æè¿°ï¼š" + order.getDes());
    
            order = new Chocolate(order);
            System.out.println("åŠ å…¥ä¸€ä»½å·§å…‹åŠ›è´¹ç”¨ï¼š" + order.cost() + ", " + "æè¿°ï¼š" + order.getDes());
        }
    }
