    4.å®ç°
    public class FacadePattern{
        public static void main(String[] args){
            Facade f = new Facade();
            f.method();
        }
    }

    //å¤–è§‚è§’è‰²
    class Facade {
        private SubSystem01 obj1 = new SubSystem01();
        private SubSystem02 obj2 = new SubSystem02();

        public void method(){
            obj1.method1();
            obj2.method2();
        }
    }

    //å­ç³»ç»Ÿè§’è‰²
    class SubSystem01 {
        public void method1(){
            System.out.println("å­ç³»ç»Ÿ01çš„method1è¢«è°ƒç”¨");
        }
    }

    //å­ç³»ç»Ÿè§’è‰²
    class SubSystem02 {
        public void method2(){
            System.out.println("å­ç³»ç»Ÿ02çš„method1è¢«è°ƒç”¨");
        }
    }

    ä¾‹å­ğŸŒ°ï¼š
        public class AudioPlayer {
            public void play(){
                System.out.println("playing audio...");
            }
        }

        public class VideoPlayer {
            public void pley(){
                System.out.println("playing video...");
            }
        }

        public class MultimediaPlayerFacade {
            private AudioPlayer audioPlayer;
            private VideoPlayer videoPlayer;

            public MultimediaPlayerFacade(){
                this.audioPlayer = new audioPlayer();
                this.videoPlayer = new videoPlayer();
            }

            public void playAudio(){
                audioPlayer.play();
            }

            public void playVideo(){
                videoPlayer.play();
            }
        }

        public class FacadePattern {
            public static void main(String[] args) {
                MultimediaPlayerFacade facade = new MultimediaPlayerFacade();
                //æ’­æ”¾éŸ³é¢‘
                facade.playAudio();
                //æ’­æ”¾è§†é¢‘
                facade.playVideo();
            }
        }
